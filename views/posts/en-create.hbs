<h2>Create a new post!</h2>
 {{#if movieId}}
<form action="/posts/create?movieId={{movieId}}" method="post">
  <label> Title:
    <input type="text" name="title" />
  </label>

  <label> Content:
    <textarea name="content" cols="30" rows="10"> </textarea>
  </label>
 
  <label> Rating:
    <input type="number" name="rating" min="1" max="10" />
  </label>
 
  <button type="submit"> Create </button>
</form>

{{else}}
<form action="/posts/create?tvId={{tvId}}" method="post">
  <label> Title:
    <input type="text" name="title" />
  </label>

  <label> Content:
    <textarea name="content" cols="30" rows="10"> </textarea>
  </label>
 
  <label> Rating:
    <input type="number" name="rating" min="1" max="10" />
  </label>
 
  <button type="submit"> Create </button>
</form>
{{/if}}
