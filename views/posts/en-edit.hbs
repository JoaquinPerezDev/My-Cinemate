<h2>Edit your post: {{post.title}}</h2>

<form action="/posts/{{post._id}}/edit" method="post">
  <label> Title:
    <input type="text" name="title" value="{{post.title}}" />
  </label>

  <label> Content:
    <textarea name="content" cols="30" rows="10">{{post.content}}</textarea>
  </label>
 
  <label> Rate:
    <input type="number" name="rating" min="1" max="10" value="{{post.rating}}" />
  </label>
 
  <button>Save changes</button>
</form>